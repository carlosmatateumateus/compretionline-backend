// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  uid      String     @id @default(uuid())
  email    String
  Product  Product[]
  Question Question[]
}

model Answer {
  id String @id @default(uuid())

  product   Product @relation(fields: [productId], references: [id])
  productId String

  question   Question @relation(fields: [questionId], references: [id])
  questionId String

  title String
}

model Question {
  id String @id @default(uuid())

  title String

  owner   User   @relation(fields: [userUid], references: [uid])
  userUid String

  product   Product  @relation(fields: [productId], references: [id])
  productId String
  Answer    Answer[]
}

model Product {
  id String @id @default(uuid())

  owner   User   @relation(fields: [userUid], references: [uid])
  userUid String

  title       String
  description String
  price       Float
  category    String

  state     String
  createdAt DateTime @default(now())
  mostView  Boolean  @default(false)
  location  String
  views     Int      @default(0)

  Question     Question[]
  Answer       Answer[]
  ProductImage ProductImage[]

  @@fulltext([title])
}

model ProductImage {
  id String @default(uuid())

  product   Product @relation(fields: [productId], references: [id])
  productId String

  photoUrl String @unique

  @@unique([id, productId])
}
