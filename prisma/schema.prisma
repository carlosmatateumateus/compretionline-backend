generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id

  email String
  Product      Product[]

  @@map("users")
}

model Product {
  id String @id @default(uuid())

  owner  User   @relation(fields: [userId], references: [id])
  userId String

  title       String
  description String
  price       Float
  location    String
  photo       String
  createdAt    DateTime

  @@map("products")
  @@fulltext([title])
}
