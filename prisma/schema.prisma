// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  email String @unique

  Product  Product[]
  Question Question[]
  Favorite Favorite[]

  @@map("users")
}

model Answer {
  id String @id @default(uuid())

  product   Product @relation(fields: [productId], references: [id])
  productId String

  question   Question @relation(fields: [questionId], references: [id])
  questionId String

  title String

  @@map("answers")
}

model Question {
  id String @id @default(uuid())

  title String

  owner  User   @relation(fields: [userId], references: [id])
  userId String

  product   Product  @relation(fields: [productId], references: [id])
  productId String
  Answer    Answer[]

  @@map("questions")
}

model Product {
  id String @id @default(uuid())

  owner  User   @relation(fields: [userId], references: [id])
  userId String

  title       String
  category    String
  description String
  price       Float
  location    String

  createdAt DateTime @default(now())
  views     Int

  Question     Question[]
  Answer       Answer[]
  ProductImage ProductImage[]
  Favorite     Favorite[]

  @@fulltext([title])
  @@map("products")
}

model ProductImage {
  id String @id @default(uuid())

  product   Product @relation(fields: [productId], references: [id])
  productId String

  photoUrl String @unique

  @@map("images")
}

model Favorite {
  id String @id @default(uuid())

  owner  User   @relation(fields: [userId], references: [id])
  userId String

  product   Product @relation(fields: [productId], references: [id])
  productId String

  @@map("favorites")
}
